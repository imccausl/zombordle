{
  "name": "zombordle",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "app",
    "packages/*"
  ],
  "scripts": {
    "dev": "yarn build-tokens && yarn workspace @app/zombordle dev",
    "start": "yarn workspace @app/zombordle start",
    "build": "yarn turbo run build --cache-dir='./.cache'",
    "build-tokens": "rm -rf packages/design-tokens/lib && yarn workspace @zombordle/design-tokens build-tokens",
    "lint": "yarn turbo run lint --color --cache-dir='./.cache'",
    "test": "TZ=\"America/Toronto\" yarn turbo run test --color --cache-dir='./.cache'",
    "lint-css": "stylelint ./**/*.{ts,tsx}",
    "test-related": "yarn workspaces foreach -A run test-related",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@svgr/webpack": "^8.1.0",
    "@testing-library/dom": "^9.3.3",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@tophat/eslint-config": "^9.0.0",
    "@tophat/eslint-import-resolver-require": "^1.0.0",
    "@types/node": "^20.10.6",
    "@types/react": "18.2.47",
    "@types/react-dom": "^18.2.18",
    "@types/testing-library__jest-dom": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@yarnpkg/sdks": "^3.1.0",
    "babel-plugin-styled-components": "^2.1.4",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.0.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest-dom": "^5.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-testing-library": "^6.2.0",
    "hoist-non-react-statics": "^3.3.2",
    "husky": "^8.0.0",
    "jsdom": "^23.0.1",
    "lint-staged": "^15.2.0",
    "postcss": "^8.4.32",
    "postcss-styled-syntax": "^0.5.0",
    "prettier": "^3.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-is": "^18.2.0",
    "styled-components": "^6.1.6",
    "stylelint": "^16.0.2",
    "stylelint-config-standard": "^35.0.0",
    "supports-color": "^9.4.0",
    "turbo": "^1.11.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vitest": "^1.1.0"
  },
  "packageManager": "yarn@4.0.2"
}
