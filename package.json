{
  "name": "zombordle",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "app",
    "packages/*"
  ],
  "scripts": {
    "start": "yarn turbo run dev --color --cache-dir='./.cache'",
    "build": "yarn turbo run build --color --cache-dir='./.cache'",
    "build-tokens": "rm -rf packages/design-tokens/lib && yarn workspace @zombordle/design-tokens build-tokens",
    "lint-js": "yarn dev lint",
    "lint": "yarn turbo run lint-all --color --cache-dir='./.cache'",
    "typecheck": "yarn turbo run typecheck --color --cache-dir='./.cache'",
    "test": "TZ=\"America/Toronto\" yarn turbo run test --color --cache-dir='./.cache'",
    "lint-css": "stylelint ./**/*.{ts,tsx}",
    "test:related": "turbo run test:related --color --cache-dir='./.cache'",
    "test:watch": "turbo run test:watch --color --cache-dir='./.cache'",
    "postinstall": "husky install",
    "prepare": "husky"
  },
  "devDependencies": {
    "@imccausl/dev": "^1.4.1",
    "@next/eslint-plugin-next": "^14.2.5",
    "@svgr/webpack": "^8.1.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20.14.15",
    "@types/react": "18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/testing-library__jest-dom": "^6.0.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@yarnpkg/sdks": "^3.2.0",
    "babel-plugin-styled-components": "^2.1.4",
    "eslint": "^9.31.0",
    "hoist-non-react-statics": "^3.3.2",
    "husky": "^9.1.4",
    "jsdom": "^24.1.1",
    "lint-staged": "^15.2.7",
    "postcss": "^8.4.35",
    "postcss-styled-syntax": "^0.6.4",
    "prettier": "^3.6.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-is": "^18.3.1",
    "styled-components": "^6.1.12",
    "stylelint": "^16.7.0",
    "stylelint-config-standard": "^36.0.0",
    "supports-color": "^9.4.0",
    "turbo": "^2.0.12",
    "typescript": "^5.5.4",
    "vite": "^5.3.5",
    "vitest": "^2.0.5"
  },
  "packageManager": "yarn@4.4.0"
}
