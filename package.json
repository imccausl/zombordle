{
  "name": "zombordle",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "app",
    "packages/*"
  ],
  "scripts": {
    "dev": "yarn build-tokens && yarn workspace @app/zombordle dev",
    "export": "yarn turbo run export --cache-dir='./.cache'",
    "start": "yarn workspace @app/zombordle start",
    "build": "yarn turbo run build --cache-dir='./.cache'",
    "build-tokens": "rm -rf packages/design-tokens/lib && yarn workspace @zombordle/design-tokens build-tokens",
    "lint": "yarn turbo run lint --color --cache-dir='./.cache'",
    "test": "TZ=\"America/Toronto\" yarn turbo run test --color --cache-dir='./.cache'",
    "lint-css": "stylelint ./**/*.{ts,tsx}",
    "test-related": "yarn workspaces foreach run test-related",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@svgr/webpack": "^8.1.0",
    "@testing-library/dom": "^9.3.1",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@tophat/eslint-config": "^7.0.4",
    "@tophat/eslint-import-resolver-require": "^0.1.4",
    "@types/node": "^18.14.6",
    "@types/react": "18.2.21",
    "@types/react-dom": "^18.2.7",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.4.1",
    "@vitejs/plugin-react": "^4.0.4",
    "@yarnpkg/sdks": "^3.0.0-rc.51",
    "babel-plugin-styled-components": "^2.1.4",
    "eslint": "^8.46.0",
    "eslint-config-next": "^13.4.19",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jest-dom": "^5.0.2",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-testing-library": "^6.0.1",
    "hoist-non-react-statics": "^3.3.2",
    "husky": "^8.0.0",
    "jsdom": "^22.1.0",
    "lint-staged": "^14.0.1",
    "postcss": "^8.4.29",
    "postcss-styled": "^0.34.0",
    "postcss-styled-syntax": "^0.4.0",
    "postcss-syntax": "^0.36.2",
    "prettier": "^3.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-is": "^18.2.0",
    "styled-components": "^6.0.7",
    "stylelint": "^15.10.2",
    "stylelint-config-standard": "^34.0.0",
    "supports-color": "^9.4.0",
    "turbo": "^1.10.13",
    "typescript": "^5.1.6",
    "vite": "^4.4.9",
    "vitest": "^0.34.1"
  },
  "packageManager": "yarn@3.6.1"
}
