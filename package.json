{
  "name": "zombordle",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "app",
    "packages/*"
  ],
  "scripts": {
    "dev": "yarn build-tokens && yarn workspace @app/zombordle dev",
    "export": "yarn turbo run export --cache-dir='./.cache'",
    "start": "yarn workspace @app/zombordle start",
    "build": "yarn turbo run build --cache-dir='./.cache'",
    "build-tokens": "rm -rf packages/design-tokens/lib && yarn workspace @zombordle/design-tokens build-tokens",
    "lint": "yarn turbo run lint --color --cache-dir='./.cache'",
    "test": "TZ=\"America/Toronto\" yarn turbo run test --color --cache-dir='./.cache'",
    "lint-css": "stylelint ./**/*.{ts,tsx}",
    "test-related": "yarn workspaces foreach run test-related",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@svgr/webpack": "^8.0.1",
    "@testing-library/dom": "^9.0.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@tophat/eslint-config": "^7.0.4",
    "@tophat/eslint-import-resolver-require": "^0.1.4",
    "@types/node": "^20.4.4",
    "@types/react": "^18.2.13",
    "@types/react-dom": "^18.2.4",
    "@types/testing-library__jest-dom": "^5.14.6",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "@vitejs/plugin-react": "^4.0.3",
    "@yarnpkg/sdks": "^3.0.0-rc.48",
    "babel-plugin-styled-components": "^2.1.4",
    "eslint": "^8.43.0",
    "eslint-config-next": "^13.4.10",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest-dom": "^4.0.3",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-testing-library": "^5.10.2",
    "hoist-non-react-statics": "^3.3.2",
    "husky": "^8.0.0",
    "jsdom": "^22.1.0",
    "lint-staged": "^13.2.3",
    "postcss": "^8.4.24",
    "postcss-styled": "^0.34.0",
    "postcss-styled-syntax": "^0.4.0",
    "postcss-syntax": "^0.36.2",
    "prettier": "^2.8.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-is": "^18.2.0",
    "styled-components": "^6.0.4",
    "stylelint": "^15.6.3",
    "stylelint-config-standard": "^33.0.0",
    "supports-color": "^9.3.1",
    "turbo": "latest",
    "typescript": "^5.1.3",
    "vite": "^4.3.9",
    "vitest": "^0.33.0"
  },
  "resolutions": {
    "@testing-library/dom": "^9.0.1"
  },
  "packageManager": "yarn@3.6.0"
}
