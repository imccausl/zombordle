{
  "name": "zombordle",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "app",
    "packages/*"
  ],
  "scripts": {
    "dev": "yarn build-tokens && yarn workspace @app/zombordle dev",
    "start": "yarn workspace @app/zombordle start",
    "build": "yarn turbo run build --cache-dir='./.cache'",
    "build-tokens": "rm -rf packages/design-tokens/lib && yarn workspace @zombordle/design-tokens build-tokens",
    "lint": "yarn turbo run lint --color --cache-dir='./.cache'",
    "test": "TZ=\"America/Toronto\" yarn turbo run test --color --cache-dir='./.cache'",
    "lint-css": "stylelint ./**/*.{ts,tsx}",
    "test-related": "yarn workspaces foreach -A run test-related",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@svgr/webpack": "^8.1.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@tophat/eslint-config": "^9.0.0",
    "@tophat/eslint-import-resolver-require": "^1.0.0",
    "@types/node": "^20.11.17",
    "@types/react": "18.3.3",
    "@types/react-dom": "^18.2.19",
    "@types/testing-library__jest-dom": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@yarnpkg/sdks": "^3.2.0",
    "babel-plugin-styled-components": "^2.1.4",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest-dom": "^5.4.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-testing-library": "^6.2.2",
    "hoist-non-react-statics": "^3.3.2",
    "husky": "^8.0.0",
    "jsdom": "^24.1.1",
    "lint-staged": "^15.2.7",
    "postcss": "^8.4.35",
    "postcss-styled-syntax": "^0.6.4",
    "prettier": "^3.2.5",
    "react": "^18.3.1",
    "react-dom": "^18.2.0",
    "react-is": "^18.2.0",
    "styled-components": "^6.1.8",
    "stylelint": "^16.7.0",
    "stylelint-config-standard": "^36.0.0",
    "supports-color": "^9.4.0",
    "turbo": "^2.0.11",
    "typescript": "^5.5.4",
    "vite": "^5.3.5",
    "vitest": "^2.0.5"
  },
  "packageManager": "yarn@4.3.1"
}
