{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "CI"
  ],
  "globalDependencies": [
    "tsconfig.json"
  ],
  "tasks": {
    "dev": {
      "persistent": true,
      "cache": false,
      "dependsOn": [
        "build-tokens"
      ]
    },
    "test:watch": {
      "persistent": true,
      "cache": false,
      "dependsOn": [
        "build-tokens"
      ]
    },
    "test:related": {
      "dependsOn": [
        "build-tokens"
      ]
    },
    "build": {
      "dependsOn": [
        "build-tokens"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "lib",
        "out/**"
      ]
    },
    "build-tokens": {
      "outputs": [
        "lib"
      ]
    },
    "lint": {
      "dependsOn": [
        "build-tokens"
      ]
    },
    "//#lint-css": {},
    "typecheck": {},
    "test": {
      "dependsOn": [
        "build-tokens"
      ],
      "outputs": [
        "coverage/**"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        "src/**/*.tsx",
        "src/**/*.ts",
        "test/**/*.ts",
        "test/**/*.tsx"
      ]
    }
  }
}
